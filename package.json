{
  "name": "wayfare-game-template",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && cp package-nwjs-template.json dist/package.json",
    "preview": "vite preview",
    "download:mac": "chmod +x scripts/download.sh && ./scripts/download.sh https://dl.nwjs.io/v0.104.0/nwjs-sdk-v0.104.0-osx-arm64.zip nwjs-sdk-osx",
    "run:mac": "pnpm download:mac && pnpm build && bin/nwjs-sdk-osx/nwjs.app/Contents/MacOS/nwjs dist",
    "download:win": "chmod +x scripts/download.sh && ./scripts/download.sh https://dl.nwjs.io/v0.104.0/nwjs-v0.104.0-win-x64.zip nwjs-win",
    "build:win": "chmod +x scripts/bundle.sh && ./scripts/bundle.sh",
    "clean": "rm -rf dist bin build",
    "fix": "biome check --write"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@tailwindcss/vite": "^4.1.14",
    "@types/node": "^24.6.2",
    "@webgpu/types": "^0.1.65",
    "nw-builder": "^4.15.0",
    "nwjs-types": "^1.0.0",
    "tailwindcss": "^4.1.14",
    "typescript": "~5.8.3",
    "unplugin-typegpu": "https://pkg.pr.new/software-mansion/TypeGPU/unplugin-typegpu@8c861fbe901d8a1ca543b28bb91c7ae0e38d2e10",
    "vite": "^7.1.7"
  },
  "license": "MIT",
  "packageManager": "pnpm@10.17.1",
  "dependencies": {
    "@typegpu/noise": "https://pkg.pr.new/software-mansion/TypeGPU/@typegpu/noise@8c861fbe901d8a1ca543b28bb91c7ae0e38d2e10",
    "@typegpu/sdf": "^0.7.0",
    "arktype": "^2.1.22",
    "koota": "^0.5.1",
    "node": "^24.9.0",
    "tone": "^15.1.22",
    "typegpu": "https://pkg.pr.new/software-mansion/TypeGPU/typegpu@8c861fbe901d8a1ca543b28bb91c7ae0e38d2e10",
    "wayfare": "^0.3.0-alpha.14",
    "wgpu-matrix": "^3.4.0"
  }
}
